<%- include("head.ejs"); %> <div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">Editar Pessoa</h4>
    </div>
    <div class="card-body">
        <form action="/editar-pessoa/<%= dados.IdPessoa %>" method="post">

            <div class="mb-3">
                 <label for="idPessoa" class="form-label">ID:</label>
                 <input type="text" class="form-control form-control-sm" id="idPessoa" name="idPessoa" value="<%= dados.IdPessoa %>" readonly>
             </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="nome" class="form-label">Nome Completo:</label>
                    <input type="text" class="form-control form-control-sm" id="nome" name="nome" value="<%= dados.Nome %>" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="cpf" class="form-label">CPF (somente números):</label>
                    <input type="text" class="form-control form-control-sm" id="cpf" name="cpf" value="<%= dados.CPF %>" maxlength="11">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="telefone" class="form-label">Telefone:</label>
                    <input type="text" class="form-control form-control-sm" id="telefone" name="telefone" value="<%= dados.Telefone %>">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" class="form-control form-control-sm" id="email" name="email" value="<%= dados.Email %>">
                </div>
            </div>

             <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="cargo" class="form-label">Cargo:</label>
                    <input type="text" class="form-control form-control-sm" id="cargo" name="cargo" value="<%= dados.Cargo %>">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="empresa" class="form-label">Empresa:</label>
                    <input type="text" class="form-control form-control-sm" id="empresa" name="empresa" value="<%= dados.Empresa %>">
                </div>
            </div>

            <div class="mb-3">
                 <label for="senha" class="form-label">Senha (máx 8 caracteres):</label>
                 <input type="password" class="form-control form-control-sm" id="senha" name="senha" value="" maxlength="8">
                 <small class="form-text text-muted">Deixe em branco para não alterar a senha.</small>
             </div>

            <button type="submit" class="btn btn-info btn-sm">Salvar Alterações</button>
            <a href="/pessoas" class="btn btn-outline-secondary btn-sm">Voltar</a>
        </form>
    </div>
</div>

</main> </body>
</html>