<%- include("head.ejs"); %>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Lista de Enfermidades e Procedimentos</h4>
        <a class="btn btn-sm btn-success" href="/inserir">Novo registro</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-sm">
                <thead>
                    <tr>
                        <th>CID10</th>
                        <th>Enfermidade (Descrição)</th>
                        <th>Procedimento Clínico (Descrição)</th>
                        <th class="d-print-none">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const item of dados) { %>
                        <tr>
                            <td><%= item.CID10 %></td>
                            <td><%= item.EnfermidadeDescricao %></td>
                            <td><%= item.ProcedimentoDescricao %></td>
                            <td class="d-print-none">
                                <a class="btn btn-sm btn-warning" href="/editar/<%= item.IdProcedimento %>">Edita</a>
                                <a class="btn btn-sm btn-danger" href="/delete/<%= item.IdProcedimento %>">Deleta</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

</main> 
</body>
</html>