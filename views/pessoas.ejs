<%- include("head.ejs"); %> <div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Lista de Pessoas</h4>
        <a class="btn btn-sm btn-success" href="/inserir-pessoa">Nova Pessoa</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-sm">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>Telefone</th>
                        <th>Email</th>
                        <th>Cargo</th>
                        <th>Empresa</th>
                        <th class="d-print-none">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const pessoa of dadosPessoas) { %>
                        <tr>
                            <td><%= pessoa.IdPessoa %></td>
                            <td><%= pessoa.Nome %></td>
                            <td><%= pessoa.CPF %></td>
                            <td><%= pessoa.Telefone %></td>
                            <td><%= pessoa.Email %></td>
                            <td><%= pessoa.Cargo %></td>
                            <td><%= pessoa.Empresa %></td>
                            <td class="d-print-none">
                                <a class="btn btn-sm btn-warning" href="/editar-pessoa/<%= pessoa.IdPessoa %>">Edita</a>
                                <a class="btn btn-sm btn-danger" href="/delete-pessoa/<%= pessoa.IdPessoa %>">Deleta</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

</main> </body>
</html>