<%- include("head.ejs"); %> <div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">Inserir Nova Pessoa</h4>
    </div>
    <div class="card-body">
        <form action="/inserir-pessoa" method="post">

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="nome" class="form-label">Nome Completo:</label>
                    <input type="text" class="form-control form-control-sm" id="nome" name="nome" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="cpf" class="form-label">CPF (somente números):</label>
                    <input type="text" class="form-control form-control-sm" id="cpf" name="cpf" maxlength="11">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="telefone" class="form-label">Telefone:</label>
                    <input type="text" class="form-control form-control-sm" id="telefone" name="telefone">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" class="form-control form-control-sm" id="email" name="email">
                </div>
            </div>

             <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="cargo" class="form-label">Cargo:</label>
                    <input type="text" class="form-control form-control-sm" id="cargo" name="cargo">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="empresa" class="form-label">Empresa:</label>
                    <input type="text" class="form-control form-control-sm" id="empresa" name="empresa">
                </div>
            </div>

            <div class="mb-3">
                 <label for="senha" class="form-label">Senha (máx 8 caracteres):</label>
                 <input type="password" class="form-control form-control-sm" id="senha" name="senha" maxlength="8">
             </div>

            <button type="submit" class="btn btn-primary btn-sm">Inserir Pessoa</button>
            <a href="/pessoas" class="btn btn-outline-secondary btn-sm">Voltar</a>
        </form>
    </div>
</div>

</main> </body>
</html>